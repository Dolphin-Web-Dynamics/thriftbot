<div id="ai_content" class="bg-white rounded-lg shadow p-6" data-controller="inline-edit">
  <%# Display mode %>
  <div data-inline-edit-target="display">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-900">AI Generated Content</h2>
      <% if item.chatgpt_description.present? || item.shopify_title.present? || item.unified_description.present? %>
        <button type="button" data-action="inline-edit#edit"
                class="text-sm text-indigo-600 hover:text-indigo-800 font-medium">
          Edit
        </button>
      <% end %>
    </div>
    <% if item.chatgpt_description.present? %>
      <div class="mb-4">
        <h3 class="text-sm font-medium text-gray-500 mb-1">ChatGPT Description</h3>
        <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= item.chatgpt_description %></p>
      </div>
    <% end %>
    <% if item.shopify_title.present? %>
      <div class="mb-4">
        <h3 class="text-sm font-medium text-gray-500 mb-1">Shopify Title</h3>
        <p class="text-sm text-gray-900"><%= item.shopify_title %></p>
      </div>
    <% end %>
    <% if item.unified_description.present? %>
      <div class="mb-4">
        <h3 class="text-sm font-medium text-gray-500 mb-1">Unified Description</h3>
        <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= item.unified_description %></p>
      </div>
    <% end %>
    <% unless item.chatgpt_description.present? || item.shopify_title.present? || item.unified_description.present? %>
      <p class="text-gray-400 text-sm">No AI content generated yet. Click "Generate AI Content" above.</p>
    <% end %>
  </div>

  <%# Edit mode %>
  <div data-inline-edit-target="form" hidden>
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-900">AI Generated Content</h2>
      <button type="button" data-action="inline-edit#cancel"
              class="text-sm text-gray-500 hover:text-gray-700 font-medium">
        Cancel
      </button>
    </div>
    <%= form_with model: item, url: update_ai_content_item_path(item), method: :patch, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Shopify Title</label>
        <%= f.text_field :shopify_title, class: "block w-full rounded-md border-gray-300 shadow-sm text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">ChatGPT Description</label>
        <%= f.text_area :chatgpt_description, rows: 6, class: "block w-full rounded-md border-gray-300 shadow-sm text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-500 mb-1">Unified Description</label>
        <%= f.text_area :unified_description, rows: 8, class: "block w-full rounded-md border-gray-300 shadow-sm text-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "Save", class: "bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 cursor-pointer" %>
        <button type="button" data-action="inline-edit#cancel"
                class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-200">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>
